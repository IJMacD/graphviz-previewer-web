{
	"name": "graphviz-previewer-web",
	"publisher": "ijmacd",
	"displayName": "Graphviz Previewer Web",
	"description": "Preview Graphviz Dot files without external dependencies",
	"version": "0.0.5",
	"repository": {
		"url": "https://github.com/IJMacD/graphviz-previewer-web.git"
	},
	"icon": "graphviz_icon_132339.png",
	"engines": {
		"vscode": "^1.62.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
        "onCommand:graphviz-previewer-web.start"
	],
	"browser": "./dist/web/extension.js",
	"contributes": {
        "languages": [
            {
                "id": "dot",
                "aliases": [
                    "Graphviz (DOT)",
                    "dot"
                ],
                "extensions": [
                    ".dot",
                    ".DOT",
                    ".gv"
                ],
                "configuration": "dot.configuration.json"
            }
        ],
		"commands": [
			{
				"command": "graphviz-previewer-web.start",
				"title": "Preview Dot File",
				"category": "Graphviz",
				"icon": "$(circuit-board)"
			}
		],
		"menus": {
			"editor/title": [
				{
					"when": "editorLangId == dot",
					"command": "graphviz-previewer-web.start",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/index.js",
		"pretest": "yarn run compile-web",
		"vscode:prepublish": "yarn run package-web",
		"compile-web": "webpack",
		"watch-web": "webpack --watch",
		"package-web": "webpack --mode production --devtool hidden-source-map",
		"lint": "eslint src --ext ts",
		"run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ."
	},
	"devDependencies": {
		"@types/vscode": "^1.62.0",
		"@types/mocha": "^9.0.0",
		"eslint": "^8.1.0",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4",
		"@vscode/test-web": "^0.0.15",
		"ts-loader": "^9.2.5",
		"webpack": "^5.52.1",
		"webpack-cli": "^4.8.0",
		"@types/webpack-env": "^1.16.2",
		"assert": "^2.0.0",
		"process": "^0.11.10"
	}
}